@model ProyectoUME.Models.Documento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Eliminar Documento</h1>

<h3 class="text-center">¿Esta seguro que quiere eliminar el documento?</h3>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h4 class="text-center" >Documento</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CursoAlturas)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CursoAlturas)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CertificadoEps)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CertificadoEps)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CertificadoArl)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CertificadoArl)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CertificadoPension)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CertificadoPension)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.HojaVida)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HojaVida)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdTramite" />
                <input type="submit" value="Borrar" class="btn btn-outline-danger" /> |
                <a asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
            </form>
        </div>
    </div>
</div>
