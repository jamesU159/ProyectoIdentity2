@model IEnumerable<ProyectoUME.Models.Jornada>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Jornada</h1>

<p class="text-center">
    <a asp-action="Create" class="btn-outline-primary">Agregar nueva Jornada</a>
</p>
<div class="container">

    <div class="row justify-content-md-center">
        <div class="col-md-9">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Jornada1)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Jornada1)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdJornada">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.IdJornada">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.IdJornada">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
