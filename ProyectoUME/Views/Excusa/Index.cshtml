@model IEnumerable<ProyectoUME.Models.Excusa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Excusas</h1>

<p class="text-center">
    <a asp-action="Create" class="btn-outline-primary">Agregar nueva Excusa</a>
</p>
<div class="container">

    <div class="row justify-content-md-center">
        <div class="col-md-9">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AnexoEvidencia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellodo2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Correo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdUsuarios)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnexoEvidencia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellodo2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Correo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUsuarios)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.IdExcusa" class="btn-outline-info">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.IdExcusa" class="btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
</div>
</div>