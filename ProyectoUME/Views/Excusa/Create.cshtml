                <span asp-validation-for="Nombre2" class="text-danger"></span>
            </div>
            <div class="form-group mx-sm-3">
                <label asp-for="Apellido1" class="control-label"></label>
                <input asp-for="Apellido1" class="form-control mx-sm-3" />
                <span asp-validation-for="Apellido1" class="text-danger"></span>
            </div>
            <div class="form-group mx-sm-3">
                <label asp-for="Apellodo2" class="control-label"></label>
