@model ProyectoUME.Models.Excusa

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Cracion de nueva excusa</h1>

<h4 class="text-center">Excusa</h4>
<hr />
